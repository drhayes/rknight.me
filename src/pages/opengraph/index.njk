---
pagination:
  data: collections.posts
  size: 1
  alias: post
permalink: opengraph/{{ post.data.permalink }}
---

<html>
    <head>
        <style>
            @font-face {
                font-family: 'Cartridge-BoldRough';
                src: url('/assets/fonts/Cartridge-BoldRough.woff2 ') format('woff2');
                font-display: swap;
            }

            body {
                margin: 0;
                padding: 0; 
                background: #272523;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            .root {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                padding: 30px;
            }

            .logo {
                display: flex;
                align-items: flex-end;
                justify-content: center;
                width: 100%;
                margin-bottom: 20px;
            }

            .logo svg {
                width: 175px;
                height: 175px;
            }

            .title {
                display: flex;
                align-items: flex-start;
                justify-content: center;
                text-align: center;
                width: 100%;
                font-size: 50px;
                font-family: 'Cartridge-BoldRough';
                font-feature-settings: 'ss01';
                color: #fff0d4;
            }
        </style>
    </head>
    <body>
        <div class="root">
            <div class="logo">
                <svg viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg" id="rklogo">
                    <path class="logo-bar" fill="#fef1d4" fill-rule="evenodd" stroke="none" d="M 300 400 L 200 200 L 300 0 L 400 0 L 300 200 L 400 400 L 300 400 Z"/>
                    <path class="logo-dot" fill="#e33d94" fill-rule="evenodd" stroke="none" d="M 0 399 L 75 399 L 75 324 L 0 324 Z"/>
                    <path class="logo-bar" fill="#fef1d4" fill-rule="evenodd" stroke="none" d="M 150 400 L 50 200 L 106 89 L 0 89 L 0 0 L 250 0 L 150 200 L 250 400 L 150 400 Z"/>
                </svg>
            </div>
            <div class="title">
                {{ post.data.title }}
            </div>
        </div>
    </body>
</html>